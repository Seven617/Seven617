<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyBlue"
    android:orientation="vertical"
    tools:context="com.example.seven.myapplication.ui.Main2Activity">
    <com.example.seven.myapplication.view.TitleBar
        android:id="@+id/login_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark" />
    <LinearLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <ImageView
        android:layout_weight="1"
        android:id="@+id/see"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
     </LinearLayout>


    <RelativeLayout
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <com.example.seven.myapplication.view.OwlView
            android:id="@+id/owl_view"
            android:layout_width="175dp"
            android:layout_height="107dp"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:id="@+id/video_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/owl_view"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#00000000">

                <com.example.seven.myapplication.view.ClearEditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_white_btn_bg"
                    android:gravity="center"
                    android:hint="请输入帐号"
                    android:paddingRight="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gainsboro" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="#00000000">

                <com.example.seven.myapplication.view.ClearEditText
                    android:id="@+id/psd"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/round_white_btn_bg"
                    android:gravity="center"
                    android:hint="请输入密码"
                    android:paddingRight="20dp"
                    android:password="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gainsboro" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>


    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="10dp"-->
        <!--android:gravity="right">-->

        <!--<TextView-->
            <!--android:id="@+id/forgetpsw"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="18dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:text="忘记密码?"-->
            <!--android:textColor="#f00f"-->
            <!--android:textSize="14sp"-->
            <!--android:textStyle="bold" />-->

    <!--</LinearLayout>-->

    <LinearLayout
        android:layout_weight="2"
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_btn"
            android:text="登录" />

        <!--<Button-->
            <!--android:id="@+id/btn_sign"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="10dp"-->
            <!--android:background="@drawable/round_btn"-->
            <!--android:text="注册" />-->

    </LinearLayout>


</LinearLayout>
